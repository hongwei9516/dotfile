{
    "title": "others enhance",
    "rules": [
        {
            "description": "others",
            "manipulators": [
                {
                    "description": "ctrl + [ to escape",
                    "type": "basic",
                    "from": {
                        "key_code": "open_bracket",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [ 
                        {
                            "key_code": "escape"
                        }
                    ]
                },
                // command + enter  => full screen
                {
                    "description": "command + enter => full screen",
                    "type": "basic",
                    "from": {
                        "key_code": "return_or_enter",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "f",
                            "modifiers": [
                                "left_command",
                                "left_control"
                            ]
                        }
                    ]
                },
                // command + shift + h,j,k,l => ctrlrol + left,down,up,right
                {
                    "description": "ctrlrol + left_arrow",
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ]
                },
                {
                    "description": "ctrlrol + right_arrow",
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ]
                },
                {
                    "description": "ctrlrol + down_arrow",
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ]
                },
                {
                    "description": "ctrlrol + up_arrow",
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
